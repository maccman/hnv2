@import './mixin'

body, html
	margin: 0
	padding: 0
	width: 100%
	height: 100%
	font-family Helvetica-Neue, Tahoma
	font-size: 13px

body.entries
	hbox()
	
	.list
		width: 350px
		inset-box-shadow(-1px, -1px, 4px, rgba(0,0,0,0.05))
		border-right: 1px solid #E0E0E0
		background: #F4F4F4
		
		.item
			padding: 10px 10px 10px 50px
			border-bottom: 1px solid #CCC
			position: relative
			line-height:16px

			heading 
				margin-bottom: 5px
				display:block
			
				h1
					padding: 0
					margin: 0
					font-size: 14px
					font-weight: normal

			.score
				position:absolute
				left: 5px
				top: 20px
				display: block
				width:35px
				text-align: center
				background: darken(#ff7910, 30%)
				border-radius(5px)
				color: #fff

			.author
				color: darken(#FF7910, 40%)
			
			&.active
				vbg-gradient(lighten(#FF7910, 30%), #FF7910)
	
	.preview
		box-flex(1)
		
		iframe
			width: 100%
			height: 100%
			border: 0
