@import './mixin'

body, html
  margin: 0
  padding: 0
  width: 100%
  height: 100%

body.entries
  hbox()
  
  .list
    width: 220px
    inset-box-shadow(-1px, -1px, 4px, rgba(0,0,0,0.05))
    border-right: 1px solid #E0E0E0
    background: #F4F4F4
    
    .item
      padding: 10px
      border-bottom: 1px solid #CCC
      
      &.active
        vbg-gradient(lighten(#FF7910, 30%), #FF7910)
  
  .preview
    box-flex(1)
    
    iframe
      width: 100%
      height: 100%
      border: 0